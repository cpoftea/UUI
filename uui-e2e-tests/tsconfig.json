{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noEmit": true,
    "rootDir": "./",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".reports"
  ],
  "include": [
    "framework",
    "scripts",
    "tests",
    "playwright.config.ts",
    "globals.d.ts"
  ]
}
